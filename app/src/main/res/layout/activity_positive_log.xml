<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_pink"
    android:orientation="vertical"
    tools:context=".ui.positivelog.PositiveLogActivity">


    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/dark_purple_bg"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="I&apos;m thankful for"
        android:textAllCaps="true"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/medium_purple_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/totalTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <fragment
        android:id="@+id/fragment2"
        android:name="com.forzipporah.mylove.fragments.positivelog.PositiveLogFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        tools:layout="@layout/fragment_positive_log"/>
</LinearLayout>
