<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.forzipporah.mylove.fragments.positivelog.PositiveLogViewFragment">

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/base_purple"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/thankful_for"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <EditText
        android:id="@+id/positiveET"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_purple_bg"
        android:gravity="top|left"
        android:hint="I'm thankful for..."
        android:inputType="textMultiLine"
        android:padding="5dp"
        android:textSize="22sp"/>
</LinearLayout>